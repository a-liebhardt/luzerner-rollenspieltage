{{#with article}}
<article role="article" class="article {{article-class}}">
  {{#with link}}<a href="{{article-link}}" {{#if article-link-target}}target="{{article-link-target}}"{{/if}}>{{/with}}
  {{#with header}}
  <header>
    {{#with article-small}}
    <small>
      {{#if article-date}}
        <!-- date -->
        <time class="article-date" datetime="{{article-date}}">
          <span class="day">{{article-date-day}}</span>
          <span class="month">{{article-date-month}}</span>
        </time>
      {{/if}}
    </small>
    {{/with}}
    {{#if article-title}}
      <{{#if article-title-tag}}{{article-title-tag}}{{else}}h2{{/if}} {{#if article-title-i18n}}i18n="{{article-title-i18n}}"{{/if}}>{{{article-title}}}</{{#if article-title-tag}}{{article-title-tag}}{{else}}h2{{/if}}>
    {{/if}}
    {{#if article-subtitle}}
      <p {{#if article-subtitle-i18n}}i18n="{{article-subtitle-i18n}}"{{/if}}>{{{article-subtitle}}}</p>
    {{/if}}
  </header>
  {{/with}}
  {{#with main}}
  <main {{#if article-body-i18n}}i18n="{{article-body-i18n}}"{{/if}}>{{{article-body}}}</main>
  {{/with}}
  {{#with footer}}
  <footer>
      {{#if article-footer-label}}
        {{> label.label label-text=article-footer-label}}
      {{/if}}
      {{#if article-footer-details}}
        <details>{{{article-footer-details}}}</details>
      {{/if}}
  </footer>
  {{/with}}
  {{#with link}}</a>{{/with}}
</article>
{{/with}}
